<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/discover_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmen_banner"
            android:name="com.example.musicapp.Fragment.FragmentBanner"
            tools:layout="@layout/fragment_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_album"
            android:name="com.example.musicapp.Fragment.FragmentAlbum"
            tools:layout="@layout/fragment_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_top_song"
            android:name="com.example.musicapp.Fragment.FragmentTopSong"
            tools:layout="@layout/fragment_top_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_playlist"
            android:name="com.example.musicapp.Fragment.FragmentPlaylist"
            tools:layout="@layout/fragment_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_topic_and_genres"
            android:name="com.example.musicapp.Fragment.FragmentTopicAndGenres"
            tools:layout="@layout/fragment_topic_and_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_suggest_song"
            android:name="com.example.musicapp.Fragment.FragmentSuggestSong"
            tools:layout="@layout/fragment_suggest_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>