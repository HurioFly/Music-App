<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/linearCardViewGenres"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/imageViewGenres"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="Display image for genres" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewTitleGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="176dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Hai con thằn lằn con đùa nhau cắn nhau đứt đuôi fdsfds"
        android:textSize="15sp"
        android:textColor="#000000"/>
</LinearLayout>